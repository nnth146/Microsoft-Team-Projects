<Page
    x:Class="MoneyLover.View.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:MoneyLover.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="900"
    Background="Transparent"
    DataContext="{Binding Source={StaticResource VML}, Path=ReportPage}"
    mc:Ignorable="d">

    <Grid Background="{StaticResource BackgroundPage}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListView ItemsSource="{Binding budgets}"
            Resources="{Binding Source={StaticResource ResListView}, Path=Resources}">
            <ListView.Header>
                <Image
                    Height="24"
                    Margin="4,4,4,8"
                    Source="{Binding Source={StaticResource RobotBudget}}" />
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ListViewItem Style="{StaticResource ListViewItemReportStyle}">
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <controls:ImageIcon
                            Height="24"
                            Margin="0,4,0,0"
                            VerticalAlignment="Top"
                            Source="{Binding Source={StaticResource Icon Wallet}}" />

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Name}" />
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="2">
                                    <TextBlock Text="{Binding Money}" />
                                    <TextBlock Text="{Binding Curency}" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid
            Grid.Column="1"
            Padding="16"
            Background="White"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1,0,0,0"
            CornerRadius="4,0,0,0"
            RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Binding Command vào 2 nút.  -->
            <local:ButtonNavigationView MonthlyButtonCommand="{Binding NaviMonthlyCommand}" MonthlyButtonCommandParameter="{x:Bind RPFrame}"
                                        AnnualButtonCommand="{Binding NaviYearCommand}" AnnualButtonCommandParameter="{x:Bind RPFrame}" />

            <Frame
                x:Name="RPFrame"
                Grid.Row="1"
                Loaded="RPFrame_Loaded" />

        </Grid>
    </Grid>
</Page>
