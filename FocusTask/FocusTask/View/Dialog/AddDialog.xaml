                        <Border
                            Width="22"
                            Height="22"
                            Background="{StaticResource color04}"
                            CornerRadius="4" />
                    </GridViewItem>
                    <GridViewItem>
                        <Border
                            Width="22"
                            Height="22"
                            Background="{StaticResource color05}"
                            CornerRadius="4" />
                    </GridViewItem>
                    <GridViewItem>
                        <Border
                            Width="22"
                            Height="22"
                            Background="{StaticResource color06}"
                            CornerRadius="4" />
                    </GridViewItem>
                    <GridViewItem>
                        <Border
                            Width="22"
                            Height="22"
                            Background="{StaticResource color07}"
                            CornerRadius="4" />
                    </GridViewItem>
                    <GridViewItem>
                        <Border
                            Width="22"
                            Height="22"
                            Background="{StaticResource color08}"
                            CornerRadius="4" />
                    </GridViewItem>
                    <GridViewItem>
                        <Border
                            Width="22"
                            Height="22"
                            Background="{StaticResource color09}"
                            CornerRadius="4" />
