    </Page.Resources>

    <Grid>
        <controls:NavigationView
            x:Name="NavigationViewPlane"
            Padding="0,12,0,0"
            Loaded="NavigationViewPlane_Loaded"
            CornerRadius="0 8 8 0"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            SelectionChanged="NavigationViewPlane_SelectionChanged"
            OpenPaneLength="320">

            <controls:NavigationView.MenuItems>
                <controls:NavigationViewItem Content="Today" Tag="Today">
                    <controls:NavigationViewItem.Icon>
                        <controls:ImageIcon Source="ms-appx:///Assets/Icon/Today.png" VerticalAlignment="Center" />
                    </controls:NavigationViewItem.Icon>
                </controls:NavigationViewItem>
                <controls:NavigationViewItem Content="Tomorrow" Tag="Tomorrow">
                    <controls:NavigationViewItem.Icon>
                        <controls:ImageIcon Source="ms-appx:///Assets/Icon/Tomorrow.png" VerticalAlignment="Center" />
                    </controls:NavigationViewItem.Icon>
                </controls:NavigationViewItem>
                <controls:NavigationViewItem Content="NextWeek" Tag="NextWeek">
                    <controls:NavigationViewItem.Icon>
                        <controls:ImageIcon Source="ms-appx:///Assets/Icon/NextWeek.png" VerticalAlignment="Center" />
                    </controls:NavigationViewItem.Icon>
                </controls:NavigationViewItem>
                <controls:NavigationViewItem Content="Completed" Tag="Completed">
                    <controls:NavigationViewItem.Icon>
                        <controls:ImageIcon Source="ms-appx:///Assets/Icon/Completed.png" VerticalAlignment="Center" />
                    </controls:NavigationViewItem.Icon>
                </controls:NavigationViewItem>
                <controls:NavigationViewItemSeparator />
            </controls:NavigationView.MenuItems>

            <controls:NavigationView.AutoSuggestBox>
                <AutoSuggestBox
                    AutomationProperties.Name="Search"
                    BorderThickness="1"
                    PlaceholderText="Search"
                    BorderBrush="{StaticResource Color3}"
                    QueryIcon="Find"
                    UpdateTextOnSelect="False">
                    <AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <ListViewItem
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                CornerRadius="4">
                                <Grid VerticalAlignment="Center">
                                    <TextBlock VerticalAlignment="Center" />
                                </Grid>
                            </ListViewItem>
                        </DataTemplate>
                    </AutoSuggestBox.ItemTemplate>
                </AutoSuggestBox>
            </controls:NavigationView.AutoSuggestBox>

            <controls:NavigationView.PaneHeader>
                <TextBlock
                    FontSize="14"
                    Text="Plane Notes"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold" />
            </controls:NavigationView.PaneHeader>

            <!--<controls:NavigationView.PaneCustomContent>
                <Grid BorderThickness="0,0,0,1" BorderBrush="{StaticResource Color3}">
