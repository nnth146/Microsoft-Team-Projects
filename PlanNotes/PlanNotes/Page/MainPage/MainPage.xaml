                                </StackPanel>
                            </ListViewItem>
                        </ListView.Items>
                    </ListView>
                </Grid>
            </controls:NavigationView.PaneCustomContent>-->

            <controls:NavigationView.PaneFooter>
                <Grid BorderThickness="0,1,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button
                        BorderBrush="{StaticResource Color3}"
                        Height="44"
                        BorderThickness="0"
                        Margin="0,0,0,-8"
                        Click="AddFolder_Click"
                        CornerRadius="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <icons:FluentSymbolIcon Symbol="AddCircle20" />
                            <TextBlock Text="Add Pane" />
                        </StackPanel>
                    </Button>
                    <Button
                        IsEnabled="False"
                        CornerRadius="0"
                        BorderThickness="0"
                        Grid.Column="1"
                        Height="44"
                        Margin="0,0,0,-8">
                        <icons:FluentSymbolIcon Symbol="FolderAdd20" />
                    </Button>
                </Grid>
            </controls:NavigationView.PaneFooter>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Padding="16,10" Background="{StaticResource Color6}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="{StaticResource Welcome}"
                        FontSize="14"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold" />
                    <Button
                        HorizontalAlignment="Right"
                        Grid.Column="1"
                        Content="Get Add Ons"
                        Background="Transparent"
                        BorderThickness="1"
                        BorderBrush="{StaticResource Color5}"
                        CornerRadius="4">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{StaticResource ButtonEvent}" />
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{StaticResource ButtonEvent}" />
                        </Button.Resources>
                    </Button>
                </Grid>
                <Frame
                    x:Name="SubFrame"
                    Grid.Row="1"
                    Loaded="SubFrame_Loaded" />
            </Grid>

        </controls:NavigationView>
    </Grid>
</Page>
