<ContentDialog
    x:Class="NoteForYou.View.Dialog.WaitingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NoteForYou.View.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BorderBrush="{StaticResource icon_securenote_color}"
    CornerRadius="8"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center">
            <TextBlock
                x:Name="Second"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="{StaticResource icon_securenote_color}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="{StaticResource icon_note_color}"
                Opacity="0.8"
                Text="Waiting to continue..." />
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            MaxWidth="200"
            Foreground="{StaticResource icon_securenote_color}"
            Text=" If you don't want to wait, get add on now!"
            TextAlignment="Center"
            TextWrapping="Wrap" />
    </Grid>
</ContentDialog>
