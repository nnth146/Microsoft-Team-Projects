<ContentDialog
    x:Class="MoneyLover.View.Dialog.WaitingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MoneyLover.View.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="White"
    BorderBrush="{StaticResource Linear1}"
    CornerRadius="8"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center">
            <TextBlock
                x:Name="Second"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="{StaticResource Linear1}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="{StaticResource Color1}"
                Opacity="0.8"
                Text="Waiting to continue..." />
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            MaxWidth="200"
            Foreground="{StaticResource Linear1}"
            Text=" If you don't want to wait, you can get add on"
            TextAlignment="Center"
            TextWrapping="Wrap" />
    </Grid>
</ContentDialog>
