<ContentDialog
    x:Class="FocusTask.View.Dialog.WaitingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FocusTask.View.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    CornerRadius="8"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMinHeight">0</x:Double>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center">
            <TextBlock
                x:Name="Second"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="{StaticResource Color08}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="Gray"
                Text="Waiting to continue..." />
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            MaxWidth="200"
            Text=" If you don't want to wait, you can buy items in the settings"
            TextAlignment="Center"
            TextWrapping="Wrap"
            Visibility="Collapsed" />
    </Grid>
</ContentDialog>
