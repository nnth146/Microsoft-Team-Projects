<Application
    x:Class="ExpenseManagement.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:UWP.Mvvm.Core.Converter"
    xmlns:local="using:ExpenseManagement"
    xmlns:vml="using:ExpenseManagement.VML">

    <Application.Resources>
        <ResourceDictionary>
            <converter:BooleanToVisibility x:Key="BooleanToVisibility" />
            <converter:DateTimeToString x:Key="DateTimeToString" />
            <converter:DoubleToString x:Key="DoubleToString" />
            <converter:Int64ToString x:Key="Int64ToString" />
            <converter:StringToColorBrush x:Key="StringToColorBrush" />

            <vml:ViewModelLocator x:Key="VML" />

            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources />
                <ResourceDictionary Source="ms-appx:///Style/Color.xaml" />
                <ResourceDictionary Source="ms-appx:///Style/String.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
