<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="redColor">#FC5C7D</Color>
    <Color x:Key="blueColor">#6A82FB</Color>
    <Color x:Key="whiteColor">#ffffff</Color>
    <Color x:Key="noColor">Transparent</Color>
    <Color x:Key="grayColor">#cccccc</Color>
    <Color x:Key="darkColor">#000000</Color>
    <Color x:Key="yellowColor">#F99746</Color>
    <Color x:Key="greenColor">#01BD6E</Color>
    <Color x:Key="startColor" >#F75D82</Color>
    <Color x:Key="endColor">#7080F6</Color>
    <LinearGradientBrush x:Key="PrimaryColor" >
        <GradientStop Color="{StaticResource startColor}" Offset="0"/>
        <GradientStop Color="{StaticResource endColor}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ColorHover"  Opacity="0.8">
        <GradientStop Color="{StaticResource startColor}" Offset="0"/>
        <GradientStop Color="{StaticResource endColor}" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="borderColor">#ccc</Color>

</ResourceDictionary>
